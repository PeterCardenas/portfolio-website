{
  "name": "personal-website",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,css,json}'",
    "lint": "eslint --ignore-path .gitignore --ext .js,.jsx,.ts,.tsx --fix --debug ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "yarn lint",
      "yarn format"
    ],
    "**/*.{css,json}": [
      "yarn format"
    ]
  },
  "dependencies": {
    "next": "12.0.7",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@types/node": "17.0.7",
    "@types/react": "17.0.38",
    "@types/tailwindcss": "^3.0.2",
    "autoprefixer": "^10.4.2",
    "eslint": "8.6.0",
    "eslint-config-next": "12.0.8",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.7",
    "postcss": "^8.4.5",
    "prettier": "^2.5.1",
    "tailwindcss": "^3.0.12",
    "typescript": "4.5.4"
  }
}
